{
  "name": "shiori-notes-app",
  "version": "1.0.0",
  "description": "Simple notes application with React frontend and Node.js backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test:api": "node test-api.js",
    "health": "node health-check.js",
    "setup": "./start-dev.sh",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/dist",
    "backend:start": "cd backend && node server.js",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
